<%= form_tag("/shelters/#{@shelter.id}/reviews", method: :post) do %>
  <%= label_tag "title" %>
  <%= text_field_tag :title %>

  <%= label_tag "rating" %>
  <%= number_field_tag :rating %>

  <%= label_tag "content" %>
  <%= text_field_tag :content %>

  <%= label_tag "picture" %>
  <%= text_field_tag :picture %>

  <%= submit_tag "Submit Review" %>
<% end %>
