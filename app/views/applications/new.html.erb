<%= form_tag("/applications", method: :post) do %>

  <%= label_tag "pets" %>
  <%= select_tag :pets, options_from_collection_for_select(@pets, :id, :name), multiple: true %>

  <%= label_tag "name" %>
  <%= text_field_tag :name %>

  <%= label_tag "address" %>
  <%= number_field_tag :address %>

  <%= label_tag "city" %>
  <%= text_field_tag :city %>

  <%= label_tag "state" %>
  <%= text_field_tag :state %>

  <%= label_tag "zip" %>
  <%= text_field_tag :zip %>

  <%= label_tag "phone_number" %>
  <%= text_field_tag :phone_number %>

  <%= label_tag "description" %>
  <%= text_field_tag :description %>

  <%= submit_tag "Submit Application" %>
<% end %>
